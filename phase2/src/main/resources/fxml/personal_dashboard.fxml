<BorderPane prefHeight="800.0" prefWidth="1000.0"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:id="root">
    <left>
        <JFXDrawer fx:id="drawer" defaultDrawerSize="250.0" layoutY="-6.0" prefWidth="250.0"/>
    </left>
    <center>
        <GridPane fx:id="center">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <StackPane.margin>
                <Insets top="60.0"/>
            </StackPane.margin>
        </GridPane>
    </center>
    <top>
        <JFXToolbar BorderPane.alignment="CENTER">
            <center>
                <HBox style="-fx-background-color: #ba8baf;" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>

                    <JFXHamburger fx:id="hamburger"/>
                </HBox>
            </center>
        </JFXToolbar>
    </top>
</BorderPane>
